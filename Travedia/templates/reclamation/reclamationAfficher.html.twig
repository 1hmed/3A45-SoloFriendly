{% extends "basefront.html.twig" %}

{% block body %}
    <div class="col-12 grid-margin" style="
                     flex-direction: column;
                      margin-top: 90px;">
    <div class="card">
    <div class="card-body">
    <h4 class="card-title">Reclamation</h4>

    <div class="text-info" style="display: inline-block">

        Etat Reclamation : {{ reclamation.etatReclamation }}
    </div>

    <div class="h4" style="horiz-align: center">

        Sujet: {{ reclamation.sujet }}


    </div>
        <div class="text-black">
            {{ reclamation.contenu }}
        </div>



        <li class="h4" style="horiz-align: center">

            Réponse:
        </li>
        {% if reclamationRep %}
        <div class="text-black">
            {{ reclamationRep.contenu }}

        </div>

        {% else %}
        <div class="text-black">
            Pas encore de réponse..

        </div>
        {% endif %}
    </div>
    </div>
    </div>



{% endblock %}